@media only screen and (max-width: 768px){
.outer_container , .top_container{
	width:100%;
	box-sizing:border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	-o-box-sizing:border-box;
	
}

a.logo{
width:100%;
float:left;
position:static;
margin:10px 0;
}

.two_boxes{
	width:100%;
	float:left;
	margin-left:0;

}

.my_product, .mlz{
	width:100%;
	float:left;
	margin-left:0;
	
}
.img_center{
	width:100%;
	display:block
}
.pro_details .fright{
	float:right;
	margin-right:3px;
}

.nav ul li{
	width:100%;
	float:left;
}
.menu{
	display:block;
	background-color:#1b1b1b;
	width:100%;
	float:left;
	color:#fff;
	text-align:left;
}	
.nav{
	display: none
}
.nav ul li a{
text-align:left;
}
 }

