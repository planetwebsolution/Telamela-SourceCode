body {
	font-family: 'Open Sans',arial,sans-serif,Helvetica,monospace;
	background: #f1f1f1;
}
@font-face {
    font-family: 'akzidenz-grotesk_bq_extrabold';
    src: url('akzidenzgrotesk-extrabold-webfont.eot');
    src: url('akzidenzgrotesk-extrabold-webfont.eot?#iefix') format('embedded-opentype'),
         url('akzidenzgrotesk-extrabold-webfont.woff') format('woff'),
         url('akzidenzgrotesk-extrabold-webfont.ttf') format('truetype'),
         url('akzidenzgrotesk-extrabold-webfont.svg#akzidenz-grotesk_bq_extrabold') format('svg');
    font-weight: normal;
    font-style: normal;

}

*{
	margin:0;
	padding:0;
}
.clear{
	float:none;
	width:100%;
	display: block;
	height:1px;
	clear: both;
}
a img{
	border:none;
}

.outer_container{
	width:784px;
	margin:0 auto;
	background: #fff;
}
.header{

	background: url("../images/header.jpg") repeat scroll 0 0 transparent;
	text-align: center;
	position:relative;
	
	}
	a.logo{
	position:absolute;
	left:32px;
	z-index:2147483647;
	
	}
a.logo img{
	float:none;
	max-height:93px !important;
}
.menu{
	display:none;
}	
.menu h3{
	width:100%;
	float:left;
	text-indent:10%;
	line-height: 45px;
	cursor: pointer;
}

.nav{
	float: left;
	width:100%;
}
.nav ul{
float:right;
	 }
.nav ul li{
list-style:none;
	float:left;
	}
.nav ul li a{
	color:#000;
	line-height:46px;
	text-decoration: none;
	text-transform:uppercase;
	font-size: 14px;
	font-weight:400;
	padding:0 15px;
	display: block;
	}
.nav ul li a:hover{
	background: #1b1b1b;
	color:#fff;
}	
.slide_section{
	width:100%;
	float:left;
}	
.products_outer{
	width:100%;
	float:left;
	background: #ececec;
	padding-top: 5px;
}
.main_heading{
width:100%;
float:left;
color:#0f8d75;
font-size:24px;
font-weight:400;
line-height:58px;

}
.products_box{
	width:95.61%;
	float:left;
	padding:0 2% 0 2.5%;
}
.my_product{
	width:235px;
	float:left;
	margin-left:20px;
	margin-bottom:20px;
}
.mlz{
	margin-left:0;
}
.pro_img{
	width:100%;
	float: left;
	background: #f1f1f1;
}
.img_center{
	text-align: center;
	vertical-align: middle;
	display:table-cell;
	width:235px;
	height:210px;
	
}
.img_center img{
	display:block;
	margin:0 auto;
	max-width:100% !important;
}
.pro_details{
	background: #454545;
	width:100%;
	float:left;
	min-height:60px;
	padding-bottom:5px;
	
}
.pro_details .fleft{
	width:136px;
	float: left;
	margin-left:15px;
}
.pro_details .fright{
float:right;
padding-right:9px;
padding-top:5px;
width:75px;
}

.pro_details .fright small, .pro_details .fright strong{
float:left;
width:100%;
color: #FFFFFF;
}
.pro_details .fright p.price{
	width:100%;
	float: left;
	margin-left:2px;
	color: #1cefc7;
	font-size:14px;
	font-weight:600;
	text-align:right;
	}
.buy_now{
	font-size:14px;
	font-weight:300;
	text-align:right;
	width:100%;
	float:left;
	color:#ffffff;
}	
.pro_details .fleft h3{
	font-size:15px;
	font-weight:300;
	line-height:21px;
	color:#cccccc;
	margin-top:8px;
	}
	.pro_details .fleft h3 a{
	color:inherit;
	text-decoration:none;
	}

.content{
	width:96%;
	float:left;
	padding:15px 2%;
}
.min-height-box{
	min-height:888px;
	float:left;
	width:100%;
	margin-bottom:20px;
}
.ndis{display:none}
.content h2.heading{
	color: #000;
	font-size:24px;
	line-height:28px;
	font-weight: 300; 
	width:100%;
	float:left;
	margin-bottom:11px;
}
.content p{
	color:#000;
	font-size:14px;
	float:left;
	width:100%;
	font-weight:300;
	line-height: 24px;
	margin-bottom:15px;
}
 .content > ul{
 	padding-left:30px !important;
 } 
 .content li{
	color:#454545;
	font-size:16px;
	float:left;
	width:100%;
	font-weight:300;
	line-height: 30px;
	margin-bottom:5px;
 	 
 
 }
.footer{
	float:left;
	width:96.1%;
	background: #e7e7e7;
	min-height:56px;
	padding:20px 2%;

}
.footerlinks{
	margin-bottom:20px;
	float:left;
	width:100%;
}
.footerlinks li{
	list-style: none;
	float:left;
}
.footerlinks li a{
	font-size:13px;
	color:#454545;
	font-weight: 400;
	text-decoration: none;
	padding:0 8px;
}
.footerlinks li a:hover{
	color:#000;
}
p.copyright{
	color: #999999;
	font-size:13px;
	text-align:center;
	
}
.item{
	position:relative;
	cursor: move;
}
h2.big{
	position:absolute;
	top:107px;
	left:49%;
	color:#fff;
	 font-family: 'akzidenz-grotesk_bq_extrabold';
	 font-size: 30px;
	 line-height:36px;
	 max-width:49%;
}


