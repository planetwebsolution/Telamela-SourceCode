

 @media only screen and (max-width: 780px){
.outer_container{
	width:100%;
	padding:0 2%;
	box-sizing:border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
}
.nav ul li a{
	line-height: 40px;
}
.menu{
	width:100%;
	max-width:100%;
	box-sizing:border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	padding-left:10%;
	font-size: 17px;
	float:left;
	line-height:50px;
	background-color: #1b1b1b;
	color:#fff; 
	
	}
.slide_section{
	margin-top:10px;
}
.logo{
	width:100%;
	max-width:100%;
	box-sizing:border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	margin-bottom:20px;
}
.logo a.logoimg{
	width:100%;
	max-width:100%;
	box-sizing:border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	margin-left:0;
	text-align: center;
	margin-bottom:20px;
}

.h_fright{
width:100%;
	float:left;
	box-sizing:border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	margin-bottom:10px;	
	padding-right: 0;
}
.product{
	width:100%;
	text-align: center;
	margin-right: 0;
}
.offer_sec, .offer_content{
	width:100%;
	float:left;
	box-sizing:border-box;
	-moz-box-sizing:border-box;
	-webkit-box-sizing:border-box;
	margin-bottom:10px;
}
ul.social{
	width:100%;
}
.offer_img{
	width:100%;
	margin-top:8px;
}
.offer_img, a.more, .offer_content h3{
	text-align: center;
}

.my_product, .mlz{
	width:100%;
	float:left;
	margin-left:0;
	
}
.img_center{
	width:100%;
	display:block
}
.pro_details .fright{
	float:right;
	margin-right:3px;
}

.nav ul li{
	width:100%;
	float:left;
}
.menu{
	display:block;
}	
.nav{
	display: none
}
.footer_left, .footer_right{
	width:100%;
	min-height:100px;
	padding-bottom:10px;
}
.half{
	width:100%;
	padding-bottom:20px;
	}

 }

  @media only screen and (max-width: 479px){
  	
  	.follow{
  		width:100%;
  		float:left;
  		text-align: left;
  		margin-bottom:10px;
  		
  	}
  	.socialicons ul li:first-child{
  		margin-left:0;
  		
  	}
  	.disclaim li{
  		width:100%;
  		background: none;
  		margin-bottom:3px;
  		text-align: center;
  	}
.copyright, .address{
	width:100%;
	float:left;
	text-align: center;
	margin-bottom:15px;
}
  } 